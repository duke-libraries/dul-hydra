<h2>Upload Content</h2>

<%= form_tag url_for(action: "upload"), method: "patch", multipart: true, role: "form" do %>
  <%= render 'form_errors' %>

  <% if current_object.has_content? %>
    <p class="alert alert-warning">
	  <strong>Warning!</strong> <%= t('dul_hydra.upload.alerts.has_content') %>
	</p>
  <% end %>

  <%= render 'select_content_file' %>

  <div class="form-group">
    <%= label_tag "comment" %>
    <%= text_area_tag "comment", nil, class: "form-control" %>
  </div>

  <div class="well well-sm form-group">
	<%= cancel_button class: "pull-right" %>
	<%= submit_tag "Upload", class: "btn btn-primary" %>
  </div>
<% end %>
