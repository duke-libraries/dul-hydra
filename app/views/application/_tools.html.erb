<div class="well well-small" id="sidebar-nav">
  <ul class="nav nav-list">
    <li class="nav-header">Tools</li>
    <li>
	  <%= render_show_doc_actions current_document %>
    </li>
	<% if current_object.can_have_attachments? and can?(:add_attachment, current_object) %>
	  <li>
		<%= link_to new_attachment_path(current_object) do %>
		  <i class="icon-file"></i> Add Attachment
		<% end %>
	  </li>
	<% end %>
	<% if current_object.can_have_content? and can?(:upload, current_object) %>
	  <li>
		<%= link_to upload_object_path(current_object) do %>
		  <i class="icon-upload"></i> Upload Content
		<% end %>
	  </li>
	<% end %>
  </ul>
</div>
