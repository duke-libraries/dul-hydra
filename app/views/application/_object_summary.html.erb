<div class="well well-sm clearfix" id="object-summary">

  <div id="object-thumbnail" class="pull-right">
    <%= render_thumbnail current_object %>
  </div>

  <h5 id="object-title">
    <%= link_to_unless_current render_object_title, url_for(current_object) %>
  </h5>

  <ul class="list-unstyled">
    <li>
      <%= current_object.class.to_s %>
    </li>
    <% if current_document.has_content? %>
      <li class="small">
        <%= render partial: 'document_content', locals: {document: current_document} %>
      </li>
    <% end %>
  </ul>

  <%# bookmark toggle control %>
  <div>
    <%= render partial: 'catalog/bookmark_control', locals: {document: current_document} %>
  </div>

</div>
