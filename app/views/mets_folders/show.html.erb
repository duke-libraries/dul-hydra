<h1>METS Folder</h1>

<table class="table-bordered">
  <tr>
    <td>Collection</td>
    <td><%= object_display_title(@mets_folder.collection_id) %></td>
  </tr>
  <tr>
    <td>Base Path</td>
    <td><%= @mets_folder.base_path %></td>
  </tr>
  <tr>
    <td>Folder Path</td>
    <td><%= @mets_folder.sub_path %></td>
  </tr>
  <tr>
    <td><%= I18n.t('activerecord.attributes.mets_folder.files_scanned') %></td>
    <td><%= @inspection_results.file_count %></td>
  </tr>
  <tr>
    <td>Excluding</td>
    <td><ul><%= mets_folder_excluded_file_list %></ul></td>
  </tr>
  <tr>
    <td>Warnings</td>
    <td><ul><%= mets_folder_message_list(@inspection_results.warnings) %></ul></td>
  </tr>
  <tr>
    <td>Errors</td>
    <td><ul><%= mets_folder_message_list(@inspection_results.errors) %></ul></td>
  </tr>
</table>

<%= link_to I18n.t('batch.mets_folder.create_batch'), procezz_mets_folder_path(@mets_folder), :class => "btn btn-primary" %>
