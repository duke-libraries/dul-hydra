<h1>Datastream Upload</h1>

<p class="lead">
  Datastream Upload Job queued.  An email will be sent to <%= @datastream_upload.user.email %> when it is complete.
</p>

<div class="row">
  <div class="col-md-2">
    Collection:
  </div>
  <div class="col-md-4">
    <%= object_display_title(@datastream_upload.collection_id) %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    Datastream:
  </div>
  <div class="col-md-4">
    <%= @datastream_upload.datastream_name %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    Folder Path:
  </div>
  <div class="col-md-4">
    <%= @datastream_upload.folder_path %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    Checksum File:
  </div>
  <div class="col-md-4">
    <%= @datastream_upload.checksum_file.present? ? @datastream_upload.checksum_path : 'No checksum file specified' %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    User:
  </div>
  <div class="col-md-4">
    <%= @datastream_upload.user.user_key %>
  </div>
</div>
